<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App{{#if title}} | {{title}}{{/if}}</title>

    <link rel="stylesheet" href="/styles/globals.pcss">
    <link rel="stylesheet" href="/styles/components/button.pcss">
    <link rel="stylesheet" href="/styles/components/input.pcss">

    {{#if styles}}
        {{#each styles}}
            <link rel="stylesheet" href="{{this}}">
        {{/each}}
    {{/if}}

    <link rel="icon" type="image/svg+xml" href="/assets/logo.svg">
</head>
<body>
    {{#if showHeader}}
    <header class="header">
        <div class="container">
            <nav class="nav">
                <a href="/" class="logo" data-link data-link-home>
                    <img src="/assets/logo.svg" alt="Chat App YP" width="40" height="40">
                    <span>Chat App</span>
                </a>
                {{#if user}}
                <div class="nav-user">
                    <a href="/profile" class="user-link-profile" data-link data-link-profile>
                        <img src="{{user.avatar}}" alt="{{user.name}}" class="user-avatar" width="32" height="32">
                        <span>{{user.name}}</span>
                    </a>
                    <a href="/logout" class="button button--small button--secondary" data-link data-logout>Выйти</a>
                </div>
                {{/if}}
            </nav>
        </div>
    </header>
    {{/if}}

    <main class="main">
        {{{body}}}
    </main>

    {{#if showFooter}}
    <footer class="footer">
        <div class="container">
            <p>© 2026 Chat App YP. Some rights reserved.</p>
        </div>
    </footer>
    {{/if}}

    {{#if scripts}}
        {{#each scripts}}
            <script src="{{this}}" defer></script>
        {{/each}}
    {{/if}}
</body>
</html>
