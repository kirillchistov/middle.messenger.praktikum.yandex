{{!< layouts/default}}

{{#content "styles"}}
<link rel="stylesheet" href="./login.css">
{{/content}}

{{#content "scripts"}}
<script src="./login.js" defer></script>
{{/content}}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-header">
            <h1 class="auth-title">Вход в AI Marketing Platform</h1>
            <p class="auth-subtitle">Введите ваши учетные данные</p>
        </div>
        
        <form class="auth-form" id="loginForm" data-testid="login-form">
            {{> components/Input 
                name="login"
                label="Логин"
                placeholder="Введите ваш логин"
                required=true
                testId="login-field"
            }}
            
            {{> components/Input 
                name="password"
                type="password"
                label="Пароль"
                placeholder="Введите ваш пароль"
                required=true
                testId="password-field"
            }}
            
            <div class="form-group">
                <label class="form-checkbox">
                    <input type="checkbox" name="remember">
                    <span>Запомнить меня</span>
                </label>
            </div>
            
            {{> components/Button 
                text="Войти"
                type="submit"
                fullWidth=true
                testId="login-submit"
            }}
        </form>
        
        <div class="auth-footer">
            <p>Нет аккаунта? <a href="/registration" data-testid="signup-link">Зарегистрируйтесь</a></p>
        </div>
    </div>
</div>